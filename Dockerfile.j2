FROM debian:jessie
MAINTAINER technology@vikingco.com

# Prepare pyenv
ENV PYENV_ROOT $HOME/.pyenv
ENV PATH $PYENV_ROOT/shims:$PYENV_ROOT/bin:$PATH
ENV PYTHON_VERSIONS {{ pythonversions }}

# Install base requirements
RUN set -x \
    && buildDeps=' \
        ca-certificates \
        make \
        build-essential \
        libssl-dev \
        zlib1g-dev \
        libbz2-dev \
        libreadline-dev \
        libsqlite3-dev \
        wget \
        curl \
        llvm \
        libncurses5-dev \
        git-core \
    ' \
    && requiredPipPackages=' \
        ipython \
        ptpython \
	' \
    && apt-get update \
    && apt-get install -y --no-install-recommends $buildDeps \
    && git clone https://github.com/yyuu/pyenv.git .pyenv \
    && for pyversion in ${PYTHON_VERSIONS}; \
        do \
            pyenv install ${pyversion} \
            && pyenv local ${pyversion} \
            && pip install ${requiredPipPackages}; \
        done \
    && pyenv global ${PYTHON_VERSIONS} \
    && find /usr/local \
		\( -type d -a -name test -o -name tests \) \
		-o \( -type f -a -name '*.pyc' -o -name '*.pyo' \) \
		-exec rm -rf '{}' + \
    && rm -rf /tmp/python-build* \
	&& apt-get purge -y --auto-remove $buildDeps

# Define env variables
ENV ROOT=/data
ENV PYTHONUNBUFFERED=1 \
    CONFSRC=./conf \
    CONFDIR=${ROOT}/conf \
    SRCDIR=${ROOT}/src \
    TOXFILEDIR=${ROOT}/src \
    DEPLOYMENTDIR=${ROOT}/deployment \
    SCRIPTSSRC=./scripts \
    SCRIPTSDIR=${ROOT}/scripts \
    BUILDDEPSFILE=builddeps.txt \
    DEPSFILE=deps.txt \
    PIPSRC=/pip
ENV PYTHONPATH $PIPSRC:$SRCDIR:$PYTHONPATH

# make directories
RUN mkdir -p ${SRCDIR} && \
    mkdir -p ${DEPLOYMENTDIR} && \
    mkdir -p ${SCRIPTSDIR} && \
    mkdir -p /root/.ptpython

RUN chown -R www-data ${ROOT}

COPY ${CONFSRC} ${CONFDIR}
COPY ${SCRIPTSSRC} ${SCRIPTSDIR}

RUN ln -s ${CONFDIR}/pip.conf /etc/pip.conf

# set workdir
WORKDIR ${SRCDIR}

# make symlink for run script
RUN ln -s ${SCRIPTSDIR}/docker-entrypoint.sh /usr/local/bin/docker-entrypoint.sh

# set run command
ENTRYPOINT ["docker-entrypoint.sh"]
CMD ["help"]
